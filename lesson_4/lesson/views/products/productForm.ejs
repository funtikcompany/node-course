<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('../components/nav') %>
    <h1><%= title %></h1>
    <main>
        <form action="<%= product.id ? `/products/update/${product.id}` : '/products/create' %>" method="post">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required value="<%= product.name %>">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" required value="<%= product.price %>">
            <button type="submit"><%= product.id ? 'Update' : 'Create' %></button>
        </form>
    </main>
    <%- include('../components/footer') %>
  </body>
</html>
